{
  "version": "0.0.2-alpha.0",
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": [
    "**/*.md"
  ],
  "command": {
    "bootstrap": {
      "hoist": true
    }
  },
  "changelog": {
    "repo": "shixintian/lerna-pro",
    "labels": {
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "doc": "Refine Doc",
      "feat": "New Feature"
    },
    "cacheDir": ".changelog"
  },
  "npmClient": "npm",
  "npmClientArgs": [
    "--no-lockfile"
  ]
}
